<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:text="글자 늘이기"
        android:onClick="onClick_SetMoreText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:text="글자 줄이기"
        android:onClick="onClick_SetLessText"/>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_sl"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray"
        sl:scale_base_width="600"
        sl:scale_base_height="250" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:color/black"
            sl:scale_left="135"
            sl:scale_top="80"
            sl:scale_width="320"
            sl:scale_height="60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="텍스트aasde3"
            android:id="@+id/tv_moretext"
            android:background="@android:color/white"
            sl:scale_left="145"
            sl:scale_top="90"
            sl:scale_width="300"
            sl:scale_height="40"
            sl:scale_textsize="30"
            sl:textview_wrapcontent_direction="center_horizontal"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="top left"
            android:textColor="@android:color/white"
            sl:scale_left="10"
            sl:scale_top="10"
            sl:scale_height="25"
            sl:scale_width="100"
            sl:scale_textsize="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="top big"
            android:textColor="@android:color/white"
            sl:scale_left="100"
            sl:scale_top="10"
            sl:scale_width="400"
            sl:scale_height="50"
            sl:scale_textsize="20" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="top medium"
            android:textColor="@android:color/white"
            sl:scale_left="105"
            sl:scale_top="15"
            sl:scale_width="300"
            sl:scale_height="40"
            sl:scale_textsize="20" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="top small"
            android:textColor="@android:color/white"
            sl:scale_left="115"
            sl:scale_top="20"
            sl:scale_width="100"
            sl:scale_height="30"
            sl:scale_textsize="20" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="top right"
            android:textColor="@android:color/white"
            sl:scale_left="490"
            sl:scale_top="10"
            sl:scale_height="25"
            sl:scale_width="100"
            sl:scale_textsize="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="right"
            android:textColor="@android:color/white"
            sl:scale_left="490"
            sl:scale_top="100"
            sl:scale_height="25"
            sl:scale_width="100"
            sl:scale_textsize="20" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="left"
            android:textColor="@android:color/white"
            sl:scale_left="10"
            sl:scale_top="100"
            sl:scale_height="25"
            sl:scale_width="100"
            sl:scale_textsize="20" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="bot left"
            android:textColor="@android:color/white"
            sl:scale_left="10"
            sl:scale_top="200"
            sl:scale_height="25"
            sl:scale_width="100"
            sl:scale_textsize="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="bot"
            android:textColor="@android:color/white"
            sl:scale_left="200"
            sl:scale_top="200"
            sl:scale_height="25"
            sl:scale_width="100"
            sl:scale_textsize="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="bot right"
            android:textColor="@android:color/white"
            sl:scale_left="490"
            sl:scale_top="200"
            sl:scale_height="25"
            sl:scale_width="100"
            sl:scale_textsize="20" />


    </com.ssomai.android.scalablelayout.ScalableLayout>


</FrameLayout>